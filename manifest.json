{
  "manifest_version": 3,
  "name": "Netflix IMDb Ratings",
  "version": "1.0",
  "description": "Display IMDb ratings on Netflix",
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["http://www.omdbapi.com/"],
  "icons": {
    "48": "icon.png"
  }
}
